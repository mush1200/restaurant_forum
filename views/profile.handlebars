<div class="col">
  <div class="card-body shadow d-flex">
    <div class="col-md-4">
      <img class="img-responsive center-block" src="{{user.image}}" style="width: 100%;">
    </div>

    <div class="col-md-8">
      <h1>{{user.name}}</h1>
      <p>{{user.email}}</p>
      <p>{{count}}已評論餐廳</p>
      <a href='/users/{{user.id}}/edit'>
        <button type="button" class="btn btn-primary">Edit</button>
      </a>
    </div>
  </div>

  <div class="card shadow mt-5">
    <div class="card-header">
      {{count}} 已評論餐廳
    </div>
    <div class="card-body">
      {{#each comments}}
      <a href="/restaurants/{{this.restaurantId}}" style="display: inline-block;">
        <img src="{{this.restaurantImage}}" class="img m-2" style="width: 3rem; height: 3rem;">
      </a>
      {{/each}}
    </div>
  </div>
</div>